<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHeaderText"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="50">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:weightSum="40">

            <TextView
                android:text="Quantity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="15"
                style="@style/ItemTransacationHeaderTextView" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/transactions_item_child_quantity"
                android:layout_weight="25"
                style="@style/ItemTransacationInfoTextView"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:weightSum="40">

            <TextView
                android:text="Product Value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="15"
                style="@style/ItemTransacationHeaderTextView" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/transactions_item_child_productvalue"
                android:layout_weight="25"
                style="@style/ItemTransacationInfoTextView"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:weightSum="40">

            <TextView
                android:text="Entry Payment"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="15"
                style="@style/ItemTransacationHeaderTextView" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/transactions_item_child_entrypayment"
                android:layout_weight="25"
                style="@style/ItemTransacationInfoTextView"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/transactions_item_child_linear_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="50"
        android:orientation="vertical"
        android:layout_weight="59">
        <!--android:visibility="invisible"-->

        <TextView
            android:id="@+id/transactions_item_child_details_header"
            android:text="Details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            style="@style/ItemTransacationHeaderTextView"
            android:layout_gravity="top"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/transactions_item_child_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            style="@style/ItemTransacationInfoTextView"
            android:layout_gravity="top" />

    </LinearLayout>



</LinearLayout>