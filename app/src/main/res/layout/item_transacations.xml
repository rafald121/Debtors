<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorHeaderText"
              android:weightSum="100">
              <!--android:padding="@dimen/item_transacation_padding">-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_weight="90">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="40"
            >
            <!--android:theme="@style/ItemTransacationHeader">-->


            <TextView
                android:text="Client"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="10"
                style="@style/ItemTransacationHeaderTextView"
                />

            <TextView
                android:text="Quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="10"
                style="@style/ItemTransacationHeaderTextView"
                />

            <TextView
                android:text="Product Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="10"
                style="@style/ItemTransacationHeaderTextView"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:text="Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_weight="10"
                style="@style/ItemTransacationHeaderTextView"
                />

            <TextView
                android:text="Type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="10"
                style="@style/ItemTransacationHeaderTextView"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="60">


            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/transaction_item_client"
                android:layout_weight="10"
                style="@style/ItemTransacationInfoTextView"/>

            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/transacation_item_quantity"
                android:layout_weight="10"
                style="@style/ItemTransacationInfoTextView"/>


            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/transaction_item_value"
                android:layout_weight="10"
                style="@style/ItemTransacationInfoTextView"/>

            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/transaction_item_date"
                android:layout_weight="10"
                style="@style/ItemTransacationInfoTextView"/>


            <TextView
                android:text="Purchase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/transaction_item_type"
                android:layout_weight="10"
                style="@style/ItemTransacationInfoTextView"/>

        </LinearLayout>
    </LinearLayout>



    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrow_expand_24"
        android:id="@+id/transaction_item_downarrow"
        android:background="@color/icon_transparent"
        android:layout_weight="10"
        android:scaleType="fitCenter"
        android:elevation="0dp"
        android:layout_gravity="center_vertical|clip_horizontal"/>

</LinearLayout>




