<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             style="@style/RecyclerViewItemDimens"                                                             android:background="@color/colorRecyclerViewDebtorsItem">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/allclients_item_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.120000005"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allclients_item_name"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/allclients_item_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/allclients_name_size"/>

    <TextView
        android:text="400"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/allclients_item_leftamount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/allclients_item_arrow"
        android:layout_marginEnd="32dp"
        android:textSize="@dimen/debtors_left_amount_size"
        android:textAlignment="textStart"/>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrow_forward_24"
        android:background="#0000"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/allclients_item_arrow"/>

</android.support.constraint.ConstraintLayout>