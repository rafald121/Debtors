<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="RecyclerViewItemDimens">

        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>

    </style>


    <style name="ItemTransacationHeaderTextView" parent="android:Theme">
        <item name="android:textSize">10dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical|bottom</item>
        <!--<item name="android:padding">3dp</item>-->
        <item name="android:paddingLeft">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ItemPaymentsHeaderTextView" parent="ItemTransacationHeaderTextView">

    </style>

    <!--<style name="ItemPaymentsTitleHeaderTextView" parent="ItemTransacationHeaderTextView">-->
        <!--<item name="android:paddingLeft">1dp</item>-->
        <!--<item name="android:layout_marginTop">0dp</item>-->
        <!--<item name="android:layout_marginLeft">0dp</item>-->
    <!--</style>-->

    <style name="ItemTransacationInfoTextView" parent="android:Theme">
        <item name="android:textSize">15dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <!--<item name="android:layout_marginBottom">2dp</item>-->
    </style>

    <style name="ItemPaymentsInfoTextView" parent="ItemTransacationInfoTextView">

    </style>

    <style name="ItemPaymentsInfoTextView1" parent="ItemTransacationInfoTextView">
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="ItemPaymentsHeaderDetails">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical|bottom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogMenuStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="DialogMenuHeader" parent="DialogMenuStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dialog_menu_from_to_size</item>
    </style>

    <style name="DialogMenuPaymentsHeader" parent="DialogMenuStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/dialog_menu_from_to_size</item>
    </style>

    <style name="DialogMenuComponent" parent="DialogMenuStyle">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="DialogMenuEditText" parent="DialogMenuStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogMenuTransactionsHeader" parent="DialogMenuStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/dialog_menu_from_to_size</item>
    </style>

    <style name="DialogMenuPaymentsDatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:scaleY">0.7</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:layout_margin">-32dp</item>
    </style>

    <style name="DialogMenuTransactionsDatePicker" parent="DialogMenuPaymentsDatePicker">

    </style>

